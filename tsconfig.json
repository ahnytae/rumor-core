{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./"
  },
  "compileOnSave": false,
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
